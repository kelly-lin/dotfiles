#!/bin/zsh

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(find ~/Repos -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmuxinator start -n $selected_name -p $HOME/.config/tmuxinator/dev.yaml workspace=$selected
